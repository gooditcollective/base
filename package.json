{
  "name": "@gooditworks/base",
  "version": "0.2.0",
  "description": "Абстрактный проект Гудитворкс. Соглашения, утилиты, конфигурация среды.",
  "homepage": "https://github.com/gooditcollective/base#readme",
  "repository": "https://github.com/gooditcollective/base",
  "license": "MIT",
  "author": "Sergey Petrov <sergey@goodit.works>",
  "contributors": [
    "Sergey Petrov <sergey@goodit.works> (sergeypetrov.ru)",
    "Max Eliseev <max@goodit.works>"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "git add . && cz",
    "dev:local": "vercel dev",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "release": "standard-version",
    "start": "ts-node src/index.ts",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "dotenv": "16.0.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "commitizen": "4.2.4",
    "commitlint-plugin-function-rules": "1.6.0",
    "concurrently": "7.0.0",
    "cz-emoji": "^1.3.1",
    "enhanced-resolve": "5.9.0",
    "eslint": "8.9.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-jest": "26.1.1",
    "jest": "27.5.1",
    "jest-junit": "13.0.0",
    "prettier": "2.5.1",
    "sort-package-json": "1.54.0",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
