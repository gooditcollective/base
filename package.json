{
  "name": "gooditworks_base",
  "version": "0.1.3",
  "description": "Gooditworks base project",
  "repository": "https://github.com/gooditworks/base",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest",
    "release": "standard-version",
    "commit": "git add . && cz"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "16.0.0",
    "@commitlint/config-conventional": "16.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "commitizen": "4.2.4",
    "commitlint-plugin-function-rules": "1.6.0",
    "concurrently": "6.5.1",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.8.3",
    "eslint": "8.5.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-jest": "25.3.0",
    "jest": "27.4.5",
    "jest-junit": "13.0.0",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "dotenv": "10.0.0"
  }
}
