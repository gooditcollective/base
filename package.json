{
  "name": "gooditworks_base",
  "version": "0.1.3",
  "description": "Gooditworks base project",
  "repository": "https://github.com/gooditworks/base",
  "license": "MIT",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "build": "tsc",
    "commit": "git add . && cz",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "release": "standard-version",
    "start": "ts-node src/index.ts",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "dotenv": "16.0.1"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@types/jest": "27.5.2",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "commitizen": "4.2.4",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.2.1",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.9.3",
    "eslint": "8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "26.5.3",
    "jest": "28.1.0",
    "jest-junit": "13.2.0",
    "prettier": "2.6.2",
    "sort-package-json": "1.57.0",
    "standard-version": "9.5.0",
    "ts-jest": "28.0.4",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
