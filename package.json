{
  "name": "gooditworks_base",
  "version": "0.1.3",
  "description": "Gooditworks base project",
  "repository": "https://github.com/gooditworks/base",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest",
    "release": "standard-version",
    "commit": "git add . && cz"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.2.4",
    "commitlint-plugin-function-rules": "^1.4.0",
    "concurrently": "^6.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "enhanced-resolve": "^5.8.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base-ts": "^14.1.2",
    "eslint-plugin-jest": "^24.5.2",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "dotenv": "^10.0.0"
  }
}
